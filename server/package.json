{
  "author": {
    "name": "Ananthu Sudhikumar",
    "email": "ananthusudhikumar@gmail.com"
  },
  "name": "social-camera-server",
  "description": "Server for the Social Camera application",
  "version": "1.0.0",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv-cli": "^3.2.0",
    "express": "^4.17.1",
    "pg": "^8.3.3",
    "sequelize": "^6.3.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.1",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@types/umzug": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "tsconfig-paths": "^3.9.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "umzug": "^2.3.0"
  },
  "scripts": {
    "start:dev": "dotenv -e .env -- ts-node -r tsconfig-paths/register index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "migrate": "dotenv -e .env -- ts-node -r tsconfig-paths/register --project ./tsconfig.json ./src/database/migrate.ts",
    "migrate:up": "npm run migrate -- up",
    "migrate:down": "npm run migrate -- down"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test)?\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleNameMapper": {
      "^src/?(.*)$": "<rootDir>/src/$1",
      "^routes/?(.*)$": "<rootDir>/src/routes/$1"
    }
  }
}
